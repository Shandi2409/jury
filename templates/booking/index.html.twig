{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    <h1>Booking index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Users</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>NombreDeJours</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.user.email }}</td>
                <td>{{ booking.StartDate ? booking.StartDate|date('m-d-Y') : '' }}</td>
                <td>{{ booking.EndDate ? booking.EndDate|date('m-d-Y') : '' }}</td>
                <td>{{ booking.NombreDeJours }}</td>
                <td>{{ booking.Prix }}</td>
                <td>
                    <a href="{{ path('booking_show', {'id': booking.id}) }}">show</a>
                    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('booking_new') }}">Create new</a>
{% endblock %}
