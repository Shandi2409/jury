{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Users</th>
                <td>{{ booking.users }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ booking.StartDate ? booking.StartDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ booking.EndDate ? booking.EndDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NombreDeJours</th>
                <td>{{ booking.NombreDeJours }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ booking.Prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">back to list</a> 

    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
